%h1 Sign up a new user

= form_for @user, :url => users_register_path(@user) do |f|
  #nick
    = f.label :nick
    %br
    = f.text_field :nick
  #password
    = f.label :password
    %br
    = f.password_field :password
  #password_confirm
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  #buttons
    = f.submit "Sign up"
